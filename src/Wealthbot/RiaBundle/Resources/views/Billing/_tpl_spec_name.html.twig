<script id="tplCreateSpecName" type="text/template">
    <h3>Create Billing Spec</h3>

    <form class="form-horizontal">
        <div class="control-group">
            <div class="controls-line">
                <input type="text" name="name" class="span2 name" placeholder="Name of Billing Spec" value="<%= name %>">
                <button type="button" class="btn create-spec">Create</button>
            </div>
            <div class="controls-line">
                {% if not is_relation_type_tamp %}
                    <div class="span1">
                        <input type="radio" value="{{ constant("Wealthbot\\AdminBundle\\Entity\\BillingSpec::TYPE_FLAT") }}" name="type" checked>Flat fee
                    </div>
                {% endif %}
                <div class="span1">
                    <input type="radio" value="{{ constant("Wealthbot\\AdminBundle\\Entity\\BillingSpec::TYPE_TIER") }}" name="type" {% if is_relation_type_tamp %} checked {% endif %}>Tier
                </div>
            </div>

        </div>
    </form>
</script>